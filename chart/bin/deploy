#!/bin/bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
cd $DIR/../../chart

REPO=$(basename $(git config --get remote.origin.url))
NAMESPACE=${REPO%.git} 

if [ -z "$1" ] || [ -z "$2" ]
then
    echo './chart/bin/deploy ENVIRONMENT TAG'
    exit 1
fi

helm upgrade --install --namespace $1-$NAMESPACE $1 . -f $1-values.yaml --set rails.image.tag=$2

echo 'Remember to push Solr Libs with:'
echo "kubectl cp ../solr/lib/solr-tokenizing_suggester-7.x.jar $1-solr-0:/opt/solr/contrib/solr-tokenizing_suggester-7.x.jar -n $1-$NAMESPACE"
